  <!--%%%%%%%%%%%%%%%%%%%%%%  todo:important %%%%%%%%%%%%%%%%%%%%%%%%%%%-->
  <!--
  Note:

           maxRequestLength is measured in kilobytes
          maxAllowedContentLength is measured in bytes
         which is why the values differ in this config example. (Both are equivalent to 2 GB)
  -->
  <!-- IIS افزایش حجم رکویست اپلود فایل پیش فرض سایت و -->
  <system.web>
    <httpRuntime maxRequestLength="2048576" />
  </system.web>

  <!-- IIS افزایش حجم فایل اپلود فایل پیش فرض سایت و -->
  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="2073741824" />
      </requestFiltering>
    </security>
  </system.webServer>

  <!-- ///////////// -->

</configuration>

